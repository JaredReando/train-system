<h1>Enter tasks for <%= @list.name %>:</h1>
<h1>Tasks array length:</h1>
<br><br>
<form action="/tasks/<%= @list.id %>" method="post">
  Task: <input type="text" name="task_entry" value="">
  <button class="btn-success" type="submit">Enter</button>
</form>

<br><br><br>
<h2>Tasks:</h2>
  <ul>
    <% @tasks.each do |task|%>
      <li><%= task.description.capitalize %></li>
    <% end %>

  </ul>

  <br><br><br>
  <a href="/">Return to Home</a>
  <h1>Update the <%=@list.name() %> list </h1>

  <form action="/tasks/<%= @list.id %>" method="post">
    <input name="_method" type="hidden" value="patch">

    <label for="name">Rename your list:</label>
    <input id="name" name="name" type="text">

    <button type="submit">Update</button>
  </form>

  <form action="/tasks/<%= @list.id() %>" method="post">
    <input name="_method" type="hidden" value="delete">

    <button type="submit">Delete list</button>
  </form>
