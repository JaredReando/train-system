<h3><a href="/"><< Back</a></h3>
<div class="row">
  <div class="col-md-6">
    <form class="add-train" action="/add_train" method="post">
      <label for="add-train">Name of train:</label>
      <input class= "input" type="text" required="true" name="train_name"><br>
      <label for="add-train">Add the train's direction:</label>
      <select name="train_direction" required="true">
        <option value="">Select Direction</option>
        <option>North/South</option>
        <option>East/West</option>
        <option>Ramblin</option>
      </select>
      <br>
      <button type="submit" class="btn btn-info">Add a train</button>
    </form>
    <div class="col-md-10">
      <% if @trains.any?() %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Direction</th>
          </tr>
        </thead>
        <tbody>
          <h3>Trains</h3>
          <% @trains.each_with_index do |train, index|%>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><a href="/trains/<%= train.id %>"><%= train.name %></a></td>
            <td><%= train.direction %>
            </tr>
            <%end%>
          </tbody>
        </table>
        <% else %>
        <br><br><br><br>
        <b>
        <p>You don't have any trains yet!</p>
        <p>Fiddle and click above to get into the action.</p>
        </b>
        <% end %>

        <h3>Click on a train name to view and add new stops!</h3>
      </div>
  </div>
  <div class="col-md-6">
